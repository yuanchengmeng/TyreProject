<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.kexun.wm.sale.bean">

	<class name="CodeTrans" table="code_trans">
		<!-- 映射主键 -->
		<comment>规格代码对应表</comment>
		<id name="id" column="id" type="integer">
			<generator class="identity" />
		</id>

		<!-- 映射基本属性 -->
		<property name="name" type="java.lang.String">
			<column name="name" length="255">
				<comment></comment>
			</column>
		</property>
		<property name="code" type="java.lang.String">
			<column name="code" length="255">
				<comment></comment>
			</column>
		</property>
		<property name="flag" type="integer">
			<column name="flag" length="11">
				<comment></comment>
			</column>
		</property>
		<property name="ctime" type="java.lang.String">
			<column name="ctime" length="255">
				<comment></comment>
			</column>
		</property>
 	</class>
</hibernate-mapping>










