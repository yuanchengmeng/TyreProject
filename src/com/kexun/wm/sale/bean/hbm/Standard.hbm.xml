<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.kexun.wm.sale.bean">

	<class name="Standard" table="standard">
		<!-- 映射主键 -->
		<comment>规格表</comment>
		<id name="id" column="id" type="integer">
			<generator class="identity" />
		</id>

		<!-- 映射基本属性 -->
		<property name="name" type="java.lang.String">
			<column name="name" length="100">
				<comment>规格名称</comment>
			</column>
		</property>
		<property name="code" type="java.lang.String">
			<column name="code" length="255">
				<comment>规格代码</comment>
			</column>
		</property>
		<property name="ctime" type="java.lang.String">
			<column name="ctime" length="255">
				<comment>添加时间</comment>
			</column>
		</property>
		<property name="cuser" type="java.lang.String">
			<column name="cuser" length="255">
				<comment>添加员工</comment>
			</column>
		</property>
		<property name="speed" type="java.lang.String">
			<column name="speed" length="255">
				<comment>速度级层</comment>
			</column>
		</property>
		<property name="tread" type="java.lang.String">
			<column name="tread" length="255">
				<comment>花纹</comment>
			</column>
		</property>
	</class>
</hibernate-mapping>










